{
    "name": "WorkTimer",
    "description": "Boost your focus and productivity by providing a customizable, distraction-free countdown. Set your goal, start the timer, and stay on track with a gentle sound alert when it's time to take a break or move on to your next task.",
    "version": "0.1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "index.html",
        "default_title": "WorkTimer - @Enze"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "timer.png",
        "48": "timer.png",
        "128": "timer.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "permissions": ["alarms", "storage", "scripting", "tabs"],
    "host_permissions": ["<all_urls>"],
    "web_accessible_resources": [
        {
            "resources": ["audio.mp3"],
            "matches": ["<all_urls>"]
        }
    ]
}
